{
  "manifest_version": 3,
  "name": "Chat Outline for Gemini: Reclaim Your Focus",
  "description": "Quickly navigate your Gemini chats with a clickable outline. Never get lost in long conversations again.",
  "version": "0.0.4",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png",
    "512": "icon/512.png"
  },
  "default_locale": "en",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "url-monitor-main-world.js"
      ],
      "matches": [
        "*://gemini.google.com/*"
      ]
    }
  ],
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Gemini Outline Settings",
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "*://gemini.google.com/*",
    "http://localhost/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3001; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3001; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}